@model IncosafCMS.Core.DomainModels.ActivityLog
@using IncosafCMS.Core.DomainModels

@{
    var dotClass = "other";
    var dotIcon = "fa-info-circle";
    var typeName = "Khác";
    switch (Model.Type)
    {
        case ActivityType.Learning:
            dotClass = "learning";
            dotIcon = "fa-book";
            typeName = "Khóa học";
            break;
        case ActivityType.Exam:
            dotClass = "exam";
            dotIcon = "fa-file-text-o";
            typeName = "Thi kiểm tra";
            break;
        case ActivityType.Practice:
            dotClass = "practice";
            dotIcon = "fa-pencil";
            typeName = "Thi thử";
            break;
    }
}

<div style="display:flex; align-items:center; gap:12px; margin-bottom:14px;">
    <div style="width:40px; height:40px; border-radius:10px; display:flex; align-items:center; justify-content:center; font-size:18px;"
         class="activity-dot @dotClass">
        <i class="fa @dotIcon"></i>
    </div>
    <div>
        <h5 style="font-size:16px; font-weight:700; color:#2c3e50; margin:0;">@Model.Title</h5>
        <small style="font-size:12px; color:#95a5a6;">@typeName</small>
    </div>
</div>
<div style="display:flex; gap:20px; flex-wrap:wrap; margin-bottom:10px;">
    <span style="display:flex; align-items:center; gap:6px; font-size:13px; color:#5a6c7d;">
        <i class="fa fa-clock-o" style="color:#667eea; width:16px; text-align:center;"></i>
        @Model.Timestamp.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
    </span>
    <span style="display:flex; align-items:center; gap:6px; font-size:13px; color:#5a6c7d;">
        <i class="fa fa-user" style="color:#667eea; width:16px; text-align:center;"></i>
        @(Model.User != null ? Model.User.DisplayName : "-")
    </span>
    @if (Model.Duration.HasValue)
    {
        <span style="display:flex; align-items:center; gap:6px; font-size:13px; color:#5a6c7d;">
            <i class="fa fa-hourglass-half" style="color:#667eea; width:16px; text-align:center;"></i>
            @(Model.Duration.Value / 60) phút
        </span>
    }
</div>
@if (!string.IsNullOrEmpty(Model.Description))
{
    <p style="font-size:13px; color:#5a6c7d; line-height:1.6; margin:0;">@Html.Raw(Model.Description)</p>
}

