@model IncosafCMS.Core.DomainModels.Identity.AppUser

@{
    Layout = null;
}

@using (Html.BeginForm("Create", "Employees", FormMethod.Post, new { id = "createEmployeeForm" }))
{
    @Html.AntiForgeryToken()

    <div class="scroll_content">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <label>Mã NV</label>
                <div>
                    @Html.DevExpress().TextBoxFor(model => model.MaNV,
                            settings =>
                            {
                                settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                                settings.Properties.NullText = "Nhập mã nhân viên";
                            }
                        ).GetHtml()
                    @Html.ValidationMessageFor(m => m.MaNV, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Họ và Tên</label>
                    <div>
                        @Html.DevExpress().TextBoxFor(model => model.DisplayName,
                            settings =>
                            {
                                settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                                settings.Properties.NullText = "Nhập họ và tên nhân viên";
                            }
                        ).GetHtml()
                        @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="hide">
                    <label>ID Nhân viên</label>
                    <div>
                        @Html.DevExpress().TextBoxFor(model => model.Id,
                            settings =>
                            {
                                settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                                settings.Enabled = false;
                            }
                        ).GetHtml()
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <div>
                        @Html.DevExpress().TextBoxFor(model => model.Address,
                            settings =>
                            {
                                settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                                settings.Properties.NullText = "Nhập địa chỉ của nhân viên";
                            }
                        ).GetHtml()
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email</label>
                    <div>
                        @Html.DevExpress().TextBoxFor(model => model.Email,
                            settings =>
                            {
                                settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                                settings.Properties.NullText = "Nhập Email của nhân viên";
                            }
                        ).GetHtml()
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Chức vụ</label>
                    <div>
                        @Html.DevExpress().ComboBoxFor(model => model.Position.Id,
                            settings =>
                            {
                                settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                                //settings.SelectedIndex = 0;
                                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
                                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                settings.Properties.TextField = "Name";
                                settings.Properties.ValueField = "Id";
                                settings.Properties.ValueType = typeof(int);
                            }
                        ).BindList((IEnumerable<IncosafCMS.Core.DomainModels.EmployeePosition>)ViewData["EmployeePositions"]).GetHtml()
                        @Html.ValidationMessageFor(m => m.Position.Id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Điện thoại</label>
                    <div>
                        @Html.DevExpress().TextBoxFor(model => model.PhoneNumber,
                            settings =>
                            {
                                settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                                settings.Properties.NullText = "Nhập số điện thoại nhân viên";
                            }
                        ).GetHtml()
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Đơn vị</label>
                    <div>
                        @Html.DevExpress().ComboBoxFor(model => model.Department.Id,
                            settings =>
                            {
                                settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                                //settings.SelectedIndex = 0;
                                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
                                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                settings.Properties.TextField = "Name";
                                settings.Properties.ValueField = "Id";
                                settings.Properties.ValueType = typeof(int);
                            }
                        ).BindList((IEnumerable<IncosafCMS.Core.DomainModels.Department>)ViewData["Departments"]).GetHtml()
                        @Html.ValidationMessageFor(m => m.Department.Id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="bg-success p-xs b-r-xs">Sản lượng đăng ký</div>
                @Html.Action("SanLuongDKOfEmployeeCreatePartial")
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="dxeBase_Material dxeTAR">
                    @foreach (var item in (IEnumerable<IncosafCMS.Core.DomainModels.Identity.ApplicationRole>)ViewData["Roles"])
                    {
                        var ischecked = Model.Roles != null && Model.Roles.Where(x => x.RoleId == item.Id).FirstOrDefault() != null;

                        <input type="checkbox" name="SelectedRole" value="@item.Name" checked="@ischecked" class="dxichCellSys dxWeb_edtCheckBoxUnchecked_Material dxICheckBox_Material dxichSys" />

                        @Html.Label(item.Name, new { @class = "dxichTextCellSys" })
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="form-group text-right" style="margin-bottom: 5px; margin-top: 5px">
        <input type="submit" value="Lưu lại" class="btn btn-primary" />
        <button type="button" class="btn btn-white" data-dismiss="modal">Hủy bỏ</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


