        <div class="full-height">
            <div class="col-lg-6" style="padding-left: 0px; padding-right: 2px;">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Danh sách Tiêu chuẩn áp dụng</h5>
                        @*<div class="text-right">
                                <button class="btn btn-primary btn-rounded btn-xs" onclick="'function(s, e){ grvStandards.CancelEdit(); }'">Tạo mới</button>
                            <button class="btn btn-info btn-rounded btn-xs">Chỉnh sửa</button>
                            <button class="btn btn-danger btn-rounded btn-xs deleteContract" href="#">Xóa</button>
                        </div>*@
