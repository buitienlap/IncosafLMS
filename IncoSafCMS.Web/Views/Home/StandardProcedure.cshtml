                    <div class="ibox-content" style="padding: 5px">
                        <div class="scroll_content">
                            @Html.Action("StandardViewPartial", "Standards")
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6" style="padding-left: 2px; padding-right: 0px;">
