@model IncosafCMS.Core.DomainModels.Identity.AppPermission

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>Quyền hạn</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên@*@Html.DisplayNameFor(model => model.Name)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
