@model IncosafCMS.Core.DomainModels.Course
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Course</h2>

<h4>Are you sure you want to delete this?</h4>
<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Code</dt><dd class="col-sm-10">@Model.Code</dd>
        <dt class="col-sm-2">Category</dt><dd class="col-sm-10">@Model.CourseCategory?.Name</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Courses", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ml-1" })
}
