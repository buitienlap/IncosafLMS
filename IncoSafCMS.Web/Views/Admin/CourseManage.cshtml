@model IEnumerable<IncosafCMS.Core.DomainModels.Course>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as IEnumerable<IncosafCMS.Core.DomainModels.CourseCategory> ?? Enumerable.Empty<IncosafCMS.Core.DomainModels.CourseCategory>();
    string q = ViewBag.Search as string;
    int? selectedCategory = ViewBag.CategoryId as int?;
}
@* Anti-forgery token for AJAX delete *@
@Html.AntiForgeryToken()

<h2>Courses</h2>

<p>
    <button id="btnAddCourse" class="btn btn-primary">Create New Course</button>
</p>

<form method="get" class="form-inline mb-2">
    <div class="form-group">
        <input type="text" name="q" value="@q" class="form-control" placeholder="Search title or code" />
    </div>
    <div class="form-group ml-2">
        <select name="categoryId" class="form-control">
            <option value="">All categories</option>
            @foreach (var cat in categories)
            {
                <option value="@cat.Id" @(selectedCategory == cat.Id ? "selected" : "")>@cat.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-secondary ml-2">Search</button>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Code</th>
            <th>Category</th>
            <th>Active</th>
            <th>Created</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Title)</td>
                <td>@Html.DisplayFor(m => item.Code)</td>
                <td>@(item.CourseCategory != null ? item.CourseCategory.Name : "")</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
                <td>
                    <button class="btn btn-sm btn-info btn-detail-course" data-id="@item.Id">Details</button>
                    <button class="btn btn-sm btn-warning ml-1 btn-edit-course" data-id="@item.Id">Edit</button>
                    <button class="btn btn-sm btn-danger ml-1 btn-delete-course" data-id="@item.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal for create/edit -->
<div class="modal fade" id="courseModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="courseModalTitle"></h4>
            </div>
            <div class="modal-body" id="courseModalBody"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            function loadCourseModal(url, title) {
                $('#courseModalTitle').text(title);
                $('#courseModalBody').html('Loading...');
                $('#courseModal').modal('show');
                $.get(url).done(function (html) {
                    $('#courseModalBody').html(html);
                }).fail(function () {
                    $('#courseModalBody').html('<div class="text-danger">Cannot load form</div>');
                });
            }

            $('#btnAddCourse').on('click', function () {
                loadCourseModal('@Url.Action("Create", "Courses")', 'Create Course');
            });

            // delegated handlers in case table rows are updated dynamically
            $(document).on('click', '.btn-edit-course', function () {
                var id = $(this).data('id');
                $('#courseModalTitle').text('Edit Course');
                $('#courseModalBody').html('Loading...');
                $('#courseModal').modal('show');
                $.get('@Url.Action("Edit", "Courses")', { id: id }).done(function (html) {
                    $('#courseModalBody').html(html);
                }).fail(function () {
                    $('#courseModalBody').html('<div class="text-danger">Cannot load form</div>');
                });
            });

            $(document).on('click', '.btn-detail-course', function () {
                var id = $(this).data('id');
                $('#courseModalTitle').text('Course Details');
                $('#courseModalBody').html('Loading...');
                $('#courseModal').modal('show');
                $.get('@Url.Action("Details", "Courses")', { id: id }).done(function (html) {
                    $('#courseModalBody').html(html);
                }).fail(function (xhr) {
                    var msg = 'Cannot load details';
                    if (xhr && xhr.responseText) msg = xhr.responseText;
                    $('#courseModalBody').html('<div class="text-danger">' + msg + '</div>');
                });
            });

            $(document).on('click', '.btn-delete-course', function () {
                var id = $(this).data('id');
                if (!confirm('Are you sure?')) return;
                var token = $('input[name="__RequestVerificationToken"]').first().val();
                $.ajax({
                    url: '@Url.Action("Delete", "Courses")',
                    type: 'POST',
                    data: { id: id, __RequestVerificationToken: token }
                }).done(function (resp) {
                    if (resp && resp.success) location.reload();
                    else alert('Delete failed');
                }).fail(function (xhr) { alert('Delete failed: ' + (xhr.responseText || 'server error')); });
            });

            // submit form via ajax
            $('#courseModal').on('submit', 'form', function (e) {
                e.preventDefault();
                var $form = $(this);
                var url = $form.attr('action');
                var data = $form.serialize();
                $.post(url, data).done(function (resp) {
                    if (resp && resp.success) {
                        location.reload();
                    } else {
                        $('#courseModalBody').html(resp);
                    }
                }).fail(function (xhr) {
                    if (xhr.responseText) {
                        $('#courseModalBody').html(xhr.responseText);
                    } else {
                        alert('Save failed');
                    }
                });
            });
        });
    </script>
}
